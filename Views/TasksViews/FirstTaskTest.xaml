<UserControl x:Class="TestManagerApp.Views.TasksViews.FirstTaskTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestManagerApp.Views.TasksViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid Background="AliceBlue">
        <TextBlock Text="{Binding TestProperty, Mode=OneWay}" 
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" />

        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" 
                  ItemsSource="{Binding AssignmentProperties}"
                  VerticalAlignment="Center">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Property" DisplayMemberBinding="{Binding Key}" />
                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Тестовая кнопка"
                Width="100"
                Height="30"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Command="{Binding TestButtonCommand}"/>


    </Grid>
</UserControl>
